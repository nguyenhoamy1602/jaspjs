<% include partials/head %>

  <body>
    <% include partials/nav %>

  <section class="section-background">
    <div class="container">
      <h2 class="page-header">
        Join us now
      </h2>
    </div>
    <!-- /.container -->
  </section>
  <!-- /.section-background -->


  <section class="section-wrapper contact-and-map">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-centre">
          <h2 class="section-title">
            Sign up
          </h2>
        <% if (message != null) { %>
          <div class="alert-danger"><%= message %></div>
        <% } %>
          <form class="signupform" action="/signup" method="post">
            <div class="form-group">
              <label>Name</label>
              <input type="text" class="form-control" name="name" />
            </div> 
            <div class="form-group">
              <label>Industry</label>
              <input type="text" class="form-control" name="industry" />
            </div> 
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email" placeholder="example@gmail.com">
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input type="text" class="form-control" name="phone" placeholder="04xxxxxxxx">
            </div>
            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password" />
            </div>      
            <div>
              <input type="submit" class="form-control" value="Submit" />
            </div>
          </form>
        </div>
        <!-- /.col-sm-6 -->
      </div> 
    </div>  
  </section>
  <% include partials/foot %>
  </body>
</html>
